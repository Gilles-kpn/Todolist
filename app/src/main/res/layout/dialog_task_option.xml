<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/markAsDone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Marquer comme fait" />

        <Button
            android:id="@+id/markAsUnDone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Marquer conne non fait" />

        <Button
            android:id="@+id/updateTask"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Mettre a jour" />

        <Button
            android:id="@+id/defineAlarm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Definir l'alarme" />

        <Button
            android:id="@+id/deleteTask"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Supprimer la tache" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>